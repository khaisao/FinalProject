<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_menu_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/dm_sans_bold"
        android:gravity="center"
        android:text="Service is running"
        android:textColor="#313D3D"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/popup_menu_subtitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center"
        android:text="Connecting device should in same WIFI, \n or connected the hotspot of this device"
        android:textColor="#313D3D"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/shared_wifi_state"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_wifi_service"

        />

    <TextView
        android:id="@+id/shared_wifi_state_hint"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center"
        android:textColor="#577399"
        android:textIsSelectable="true"
        android:textSize="20dp"
        tools:text="http://10.100.9.195:8081" />


    <LinearLayout
        android:id="@+id/ll_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shared_wifi_cancel"
            android:text="Ok"
            android:textSize="16sp"
            android:fontFamily="@font/dm_sans_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>